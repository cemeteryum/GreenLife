<div class="col-md-12">
  <div class="col-md-12 pathLocation custom_margin">
    <div class = "location_name">
      LISTING TREATS
    </div>
    <% if logged_in? %>
      <%= link_to new_treat_path do %>
        <div class = "add_link add_hover">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add treat
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class = "col-md-8">

  <!-- For each article draw the following-->
  <% @treats.each do |treat| %>
    
    	<div class = "custom_margin" style = "min-height: 250px">
    	  
  <!-- Treat symtom -->
    		<div class = "treat_text">
    		  
    		  <!-- If logged in with author or admin show Edit & Remove button -->
    		  <div class = "art_control">
            <% if logged_in? && (current_user == treat.user || current_user.admin?) %>
              <%= link_to edit_treat_path(treat) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              <%= link_to treat, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <% end %>
            <% end %>
          </div>
          
          <!-- Treat title -->
          <%= link_to treat do %>
    			  <div class = "how_i"> How I treat </div> <div class = "treat_title"> <b><%= treat.name %></b> </div>
    			<% end %>
    			
    			<!-- Treat Symptom -->
    			<div class = "treat_desc">
    			  <%= treat.sym.split[0...30].join(' ')+" ... " %>
          </div>
    		</div>
    		
  <!-- Treatment -->
        <div class = "treat_text" style = "min-height: 120px;">
      		<div class = "how_i"> <i><b>Treat</b>ment</i></div> <div class = "line" style = "margin-right: 10px;"> </div>
      		
      			<!-- Treatment -->
      		<div class = "treat_desc" style = "margin-top: 25px;">
      		  <%= treat.reg.split[0...30].join(' ')+" ... " %>
          </div>
    	  </div>
    			
  <!-- Article Controls -->
  
    			<div class = "treat_controls">
    			  
    			  <%= link_to like_treat_path(treat, like: true), method: :post do %>
      				<div class = "like_treat add_hover">
                  <i class="glyphicon glyphicon-thumbs-up"></i>
                <%= treat.thumb_up_total %> 
              </div>
            <% end %>
            <%= link_to like_treat_path(treat, like: false), method: :post do %>
      				<div class = "dislike_treat add_hover">
                  <i class="glyphicon glyphicon-thumbs-down"></i>
                <%= treat.thumb_dw_total %>
      				</div>
    				<% end %>
    				<div class = "comments_treat"> <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= treat.comments %></span> </div>
    				<div class = "when_treat"> 12 March </div>
    				
    				<div class = "author_treat">
        			by <b> <%= treat.user.username %> </b>
      		  </div>
    				
    				<%= link_to treat.cat do %>
    				<div class = "tag_treat add_hover">
      			  <b><%= treat.cat.name %></b>
      			</div>
      			<% end %>
    				
    				<% if treat.md %>
    				  <div class = "positive">
    				    DIAGNOSED 
    				  </div>
    				<% else %>
    				  <div class = "negative">
    				    DIAGNOSED 
    				  </div>
    				<% end %>
    				
    			</div>
    	</div>
  
  <% end %>

</div>

