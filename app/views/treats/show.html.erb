<div class = "col-md-8">

<!-- Article Controls -->

	<div class = "treat_controls custom_margin">
	  
	  <%= link_to like_treat_path(@treat, like: true), method: :post do %>
			<div class = "like_treat add_hover">
          <i class="glyphicon glyphicon-thumbs-up"></i>
        <%= @treat.thumb_up_total %> 
      </div>
    <% end %>
    <%= link_to like_treat_path(@treat, like: false), method: :post do %>
			<div class = "dislike_treat add_hover">
          <i class="glyphicon glyphicon-thumbs-down"></i>
        <%= @treat.thumb_dw_total %>
			</div>
		<% end %>
		
		<div class = "comments_treat"> <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= @treat.comments %></span> </div>
		
		<div class = "when_treat"> 12 March </div>
		
		<div class = "author_treat">
			by <b> <%= @treat.user.username %> </b>
	  </div>
		
		<%= link_to @treat.cat do %>
		<div class = "tag_treat add_hover">
		  <b><%= @treat.cat.name %></b>
		</div>
		<% end %>
		
		<% if @treat.md %>
		  <div class = "positive">
		    DIAGNOSED 
		  </div>
		<% else %>
		  <div class = "negative">
		    DIAGNOSED 
		  </div>
		<% end %>
		
	</div>
    	  
  <!-- Treat symtom -->
  <div class = "row">
  	<div class = " col-md-6">
  
        <!-- Treat title -->
        <div class = "show_treat_title">
    		  How I treat <b><%= @treat.name %></b>
    		</div>
    		<!-- Treat Symptom -->
    		<div class = "show_treat_sym">
    		  <%= @treat.sym %>
        </div>
  	</div>
      		
    <!-- Treatment -->
    <div class = "col-md-6">
  		<div class = "show_treat_title"> <i><b>Treat</b>ment</i></div>
  		
  			<!-- Treatment -->
  		<div class = "show_treat_sym">
  		  <%= @treat.reg %>
      </div>
      
    </div>
  </div>
  
  <div style = "margin-bottom: 5px; background-color: black; color: white; font-size: 20px; font-weight: bold; letter-spacing: -2px; padding: 10px; margin-top: 30px; margin-bottom: 30px;">
    COMMENTS
  </div>
  
<% @comms.each do |com| #@treat.coms.each do |com| %>
  <p>
    <b>Comment:</b>
    <%= com.text %> |
    <% if logged_in? && (current_user == com.user || current_user.admin?) %>
    <%= link_to 'Destroy Comment', [com.treat, com],
               :confirm => 'Are you sure?',
               :method => :delete %> |
    <% end %>
    <small><td>Created by: <%= com.user.username %>, <%= time_ago_in_words(com.created_at) %> ago, last updated: <%= time_ago_in_words(com.updated_at) %> </td></small>
    
        <% @reps.each do |rep| #@treat.reps.each do |rep| %>
          <% if rep.p_id == com.id%>
            <p>
                <b>Reply:</b>
                <%= rep.text %> |
                <% if logged_in? && (current_user == rep.user || current_user.admin?) %>
                <%= link_to 'Destroy reply', [rep.treat, rep],
                           :confirm => 'Are you sure?',
                           :method => :delete %> |
                <% end %>
                <small><td>Created by: <%= rep.user.username %>, <%= time_ago_in_words(rep.created_at) %> ago, last updated: <%= time_ago_in_words(rep.updated_at) %> </td></small>
            <% end %>
            <% end %>
      <% if logged_in? %>
      <%= form_for([@treat, @treat.reps.build]) do |f| %>
        <%= f.hidden_field :p_id, :value => com.id %>
        <div class="field">
        <%= f.label :text %><br />
        <%= f.text_area :text %>
        </div>
        <div class="actions">
        <%= f.submit %>
        </div>
        <% end %>
      <% end %>
  </p>
<% end %>

<% if logged_in? %>
<h2>Add a comment:</h2>
<%= form_for([@treat, @treat.reps.build]) do |f| %>
  <%= f.hidden_field :p_id, :value => 0 %>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% end %>

<%= link_to 'Edit', edit_treat_path(@treat) %> |
<%= link_to 'Back', treats_path %>


</div>  			


