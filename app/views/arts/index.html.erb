<h4>Listing Arts <div class = "label label-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Article', new_art_path %></div></h4>

<!-- Article template (multiply till you drop)-->
<% @arts.each do |art| %>
  <div class = "col-md-4 custom_margin">
    <div class = "art_container">
      <div class = "art_header">
        <% if logged_in? && (current_user == art.user || current_user.admin?) %>
        <div class = "art_control">
          <%= link_to edit_art_path(art) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
          <%= link_to art, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </div>
        <% end %>
        <div class = "art_header">
          <%= link_to art.title, art %>
          <br />
          <%= link_to art.cat.name, cat_arts_path(art.cat) %>
        </div>
      </div>
    
      <div class = "art_description">
        <%= art.description %>
      </div>
    
      <div class = "art_details pull-left">
        by: <%= art.user.username %>, <%= time_ago_in_words(art.created_at) %> ago <br />last updated: <%= time_ago_in_words(art.updated_at) %> ago
      </div>
      <div class="pull-right">
        <%= link_to like_art_path(art, like: true), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-up"></i>
        <% end %>
        <%= art.thumb_up_total %>
        &nbsp
        <%= link_to like_art_path(art, like: false), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-down"></i>
        <% end %>
        <%= art.thumb_dw_total %>
        <br />
        Comments <span class="badge"><%= art.comments %></span>
      </div>
    </div>
  </div>
<% end %>