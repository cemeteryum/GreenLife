<h4>Listing Arts <div class = "label label-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Article', new_art_path %></div></h4>

<!-- Article template (multiply till you drop)-->
<% @arts.each do |art| %>
  <div class = "col-md-4 custom_margin">
    <div class = "art_container">
      
      <div class = "art_header">
        <% if logged_in? && (current_user == art.user || current_user.admin?) %>
        <div class = "art_control">
          <%= link_to edit_art_path(art) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
      
          <%= link_to art, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </div>
        <% end %>
        <div class = "art_header">
          <%= link_to art.title, art %>
        </div>
        
      </div>
    
      <div class = "art_description">
        <%= art.description %> are <%= art.coms.count %> commenturi
      </div>
    
      <div class = "art_details">
        by: <%= art.user.username %>, <%= time_ago_in_words(art.created_at) %> ago, last updated: <%= time_ago_in_words(art.updated_at) %> ago
      </div>
    </div>
  </div>
<% end %>