
    <div class="pathLocation add_shadow">
      <p>LISTING ARTICLES</p> 
    </div>


<% rd = image_path("read_more.png") %>

<% if logged_in? %>
  <div class = "col-md-4 custom_margin mid">
    <% ptth = image_path("add.jpg") %>
      <div class = "art_container " style="background: url(<%= ptth %>) center center; background-size: cover;">
      <%= link_to new_art_path do %>
        <div class = "cover" style="background-color: #222222; padding-top: 50px;"></div>
              <p>Add article</p>
        </div>
      <% end %>
  </div>
<% end %>
 
<div class = "col-md-8 ">

<!-- For each article draw the following-->
<% @arts.each do |art| %>


  
  	<div class = "row new_css add_shadow">
  	  
<!-- Article header-->
  		<div class = "tile_text">
  		  
  		  <!-- If logged in with author or admin show Edit & Remove button -->
  		  <div class = "art_control">
          <% if logged_in? && (current_user == art.user || current_user.admin?) %>
                <%= link_to edit_art_path(art) do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
                <%= link_to art, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <% end %>
          <% end %>
        </div>
        
        <!-- Article title -->
        <%= link_to art do %>
  			  <div class = "tile_title"> <%= art.title %> </div>
  			<% end %>
  			
  			<!-- Article description -->
  			<div class = "tile_text">
  			  <%= art.description.split[0...40].join(' ')+" ... " %>
        </div>
        
<!-- Article Body -->
  		</div>
  		<div class = "tile_body">
  		  <%= link_to art do %>
    			<div class = "tile_picture add_hover" style = "background: url(http://medimoon.com/wp-content/uploads/2014/02/mate-dna-dnk-medical-genes-photos-pictures-555395.jpg) center; fixed; background-size: cover;">
    				<div class = "tile_tag">
    					  <%= art.cat.name %>
    				</div>
    				<div class = "tile_author">
      				by: <%= art.user.username %>
    				</div>
    			</div>
  			<% end%>
  			
<!-- Article Controls -->
  			<div class = "tile_controls">
  			  <%= link_to like_art_path(art, like: true), method: :post do %>
    				<div class = "like add_hover">
                <i class="glyphicon glyphicon-thumbs-up"></i>
              <%= art.thumb_up_total %> 
            </div>
          <% end %>
          <%= link_to like_art_path(art, like: false), method: :post do %>
    				<div class = "dislike add_hover">
                <i class="glyphicon glyphicon-thumbs-down"></i>
              <%= art.thumb_dw_total %>
    				</div>
  				<% end %>
  				<div class = "comments"> <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= art.comments %></span> </div>
  				<div class = "when"> 12 March </div>
  				<%= link_to art do %>
  				  <div class = "read_more add_hover" style="background: url(<%= rd %>) center no-repeat; background-size: 70% 85%;"></div>			
  			  <% end%>
  			</div>
  			
  		</div>
  	</div>

<% end %>

</div>