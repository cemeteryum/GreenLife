<h1><%= (@art.new_record? ? "Create article" : "Update article") %></h1>
<%= form_for(@art) do |f| %>
  <% if @art.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@art.errors.count, "error") %> prohibited this art from being saved:</h2>

      <ul>
      <% @art.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="dropdown">
  <%= collection_select(:art, :cat_id, Cat.all, :id, :name, prompt: true) %>
  </div>
  <div class="checkbox">
    <%= f.label :tags %><br>
    <%= collection_check_boxes(:art, :tag_ids, Tag.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit(@art.new_record? ? "Create article" : "Update article") %>
  </div>
<% end %>
