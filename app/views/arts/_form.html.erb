<div class = "modal-dialog">
	<div class = "modal-content">
    <div class="modal-header" style="padding:35px 50px;">
      <h1><%= (@art.new_record? ? "Create article" : "Update article") %></h1>
    </div>
    <div class="modal-body" style="padding:40px 50px;">
      <%= form_for(@art) do |f| %>
        <% if @art.errors.any? %>
          <div id="error_explanation">
          <h2><%= pluralize(@art.errors.count, "error") %> prohibited this art from being saved:</h2>
          <ul>
          <% @art.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
          </div>
        <% end %>
        <div class="form-group field">
          <%= f.label :title %><br>
          <%= f.text_field :title, :class=>"form-control" %>
        </div>
        <div class="form-group field">
          <%= f.label :description %><br>
          <%= f.text_area :description, :class=>"form-control" %>
        </div>
        <div class="form-group field">
        <%= collection_select(:art, :cat_id, Cat.all, :id, :name, {prompt: true}, {class: "form-control"}) %>
        </div>
        <div class="form-group field">
          <%= f.label :tags %><br>
          <%= collection_check_boxes(:art, :tag_ids, Tag.all, :id, :name, {}, {class: "checkbox-inline"}) %>
        </div>
        <div class="actions">
          <%= f.submit(@art.new_record? ? "Create article" : "Update article", :class => 'btn btn-success btn-block') %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <%= link_to 'Back' ,arts_path, :class=>"btn btn-danger btn-default pull-left" %>
	    <%= link_to "Show" ,@art, :class=>"btn btn-danger btn-default pull-left" %>
    </div>
  </div>
</div>

