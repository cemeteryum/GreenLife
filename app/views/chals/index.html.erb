<h4>Listing Challenges <div class = "label label-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Challenge', new_chal_path %></div></h4>
  <% @chals.each do |chal| %>
    <div class = "col-md-12 custom_margin">
      <div class = "t_container container-fluid">
        <div class = "t_header">
          <% if logged_in? && (current_user == chal.user || current_user.admin?) %>
          <div class = "t_control">
            <%= link_to edit_chal_path(chal) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <%= link_to chal, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          </div>
          <% end %>
          <div class = "t_header">
            <%= link_to "Let's treat "+chal.name, chal %>
            <br />
            <%= link_to "Category: "+chal.cat.name, cat_chals_path(chal.cat) %>
          </div>
        </div>
        <div class = "t_description">
        <%= "Treatment: "+chal.reg %>
        <br />
        <%= "Duration: "+(chal.dur).to_s+" day(s)" %>
        </div>
        <div class = "t_details pull-left">
        by: <%= chal.user.username %>, <%= time_ago_in_words(chal.created_at) %> ago <br />last updated: <%= time_ago_in_words(chal.updated_at) %> ago
        </div>
        <div class="pull-right">
      <%= link_to like_chal_path(chal, like: true), method: :post do %>
        <i class="glyphicon glyphicon-thumbs-up"></i>
      <% end %>
      <%= chal.thumb_up_total %>
      &nbsp
      <%= link_to like_chal_path(chal, like: false), method: :post do %>
        <i class="glyphicon glyphicon-thumbs-down"></i>
      <% end %>
      <%= chal.thumb_dw_total %>
      <br />
      Comments <span class="badge"><%= chal.comments %></span>
      </div>
  </div>
  </div>
  <% end %>