<div class="col-md-12">
  <div class="col-md-12 pathLocation custom_margin">
    <div class = "location_name">
      LISTING CHALLENGES
    </div>
    <% if logged_in? %>
      <%= link_to new_chal_path do %>
        <div class = "add_link add_hover">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add challenge
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class = "col-md-8">

<!-- For each challenge draw the following-->
<% @chals.each do |chal| %>
  
  	<div class = "treat_css custom_margin">
  	  
<!-- Treat symtom -->
  		<div class = "index_treat_text">
  		  
  		  <!-- If logged in with author or admin show Edit & Remove button -->
  		  <div class = "edit_delete_control">
          <% if logged_in? && (current_user == chal.user || current_user.admin?) %>
            <%= link_to edit_chal_path(chal) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <%= link_to chal, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          <% end %>
        </div>
        
        <!-- Treat title -->
        <%= link_to chal do %>
  			  <div class = "how_i"> Let's treat </div> <div class = "index_treat_title"> <b><%= chal.name %></b> </div>
  			<% end %>
  			
  			<!-- Treat Symptom -->
  			<div class = "index_treat_desc">
  			  <%= chal.reg.split[0...30].join(' ')+" ... " %>
        </div>
  		</div>
  		
  			
<!-- Article Controls -->
  
    	<div class = "index_treat_controls" style = "margin-bottom: 15px;">
    	  
  		  <div class = "positive">
          <%= (chal.dur).to_s %> day(s) 
  		  </div>
    		
    		<%= link_to chal.cat do %>
    			<div class = "tag_treat add_hover">
    			  <b><%= chal.cat.name %></b>
    			</div>
    		<% end %>
    		
    		<div class = "author_treat">
    			by <b> <%= chal.user.username %> </b>
    	  </div>
    	  
    	  <div class = "when_treat"> 12 March </div>
    
    		<div class = "comments_treat"> <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= chal.comments %></span> </div>
    
    		<%= link_to like_treat_path(chal, like: true), method: :post do %>
    			<div class = "like_treat add_hover">
              <i class="glyphicon glyphicon-thumbs-up"></i>
            <%= chal.thumb_up_total %> 
          </div>
        <% end %>
        <%= link_to like_treat_path(chal, like: false), method: :post do %>
    			<div class = "dislike_treat add_hover">
              <i class="glyphicon glyphicon-thumbs-down"></i>
            <%= chal.thumb_dw_total %>
    			</div>
    		<% end %>
    		
    	</div>
  	</div>
 

<% end %>

</div>

